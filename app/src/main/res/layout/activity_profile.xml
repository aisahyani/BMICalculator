<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#F6F4FA"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dip"
        android:paddingRight="16dip">

        <ImageView
            android:id="@+id/logouitm"
            android:layout_width="400dp"
            android:layout_height="250px"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:src="@drawable/uitm" />

        <TextView
            android:id="@+id/uitm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF000000"
            android:text="@string/uitm"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/programcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF000000"
            android:text="@string/program"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ecah"
            android:layout_width="300px"
            android:layout_height="300px"
            android:paddingLeft="16dip"
            android:paddingTop="16dip"
            android:paddingRight="16dip"
            android:src="@drawable/aisah" />
        <TextView
            android:id="@+id/aisah"
            android:layout_width="291dp"
            android:textColor="#FF000000"
            android:layout_height="121dp"
            android:gravity="center"
            android:paddingTop="15dip"
            android:text="@string/aisah"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/sourcecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="10dip"
            android:text="ICT602 BMI CALCULATOR "
            android:textColor="#673AB7"
            android:textSize="16sp" />

        <TextView
        android:id="@+id/copy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="#FF000000"
        android:text="@string/copy" />
    </LinearLayout>
</LinearLayout>